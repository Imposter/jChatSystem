PLATFORM = $(shell uname)

all: build

build:
	make -f Makefile_server_windows build
	make -f Makefile_client_windows build

clean:
	rm -f build/jchat_server.exe build/jchat_client.exe
	find ./ -name \*.o -type f -delete

install:
	mkdir -p bin
	cp build/jchat_server.exe bin/jchat_server.exe
	cp build/jchat_client.exe bin/jchat_client.exe

uninstall:
	rm -rf bin

.PHONY: all build clean install uninstall
